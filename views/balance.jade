extends layout

block content
  div(class='columns')
    div(class='column is-one-quarter')
      aside(class='menu')
        p(class='menu-label') Transactions
        ul(class='menu-list')
          li #[a(href='/balance', class='is-active') Balance]
          li #[a(href='/deposit') Deposit]
          li #[a(href='/withdraw') Withdraw]
          li #[a(href='/history') Transaction History]
        p(class='menu-label') Account
        ul(class='menu-list')
          li #[a(href='/account') Account Settings]
          li #[a(href='/personal') Personal Information]
          li #[a(href='/logout') Logout]
    div(class='column')
      each account in accounts
        div(class='box')
          div(class='content')
            h1 Account #{account.accountNumber}
            p Balance: <strong>$#{account.balance}</strong>

block footer
  div(class='content has-text-centered')
    small You are logged in as <strong>#{user.email}</strong> || Copyright &copy; 2018 ACME Banking Corp.
